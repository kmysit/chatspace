.main-chat
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__memberlist
        Member:
        %li.main-header__left-box__memberlist__member
          - @group.users.each do |user|
            =user.name
    = link_to edit_group_path(params[:group_id]), class:"edit-btn" do
      Edit

  .messages
    = render @messages

  .main-footer
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main-footer__text', placeholder: 'type a message'
      .main-footer__icon
        = f.label :image, class: ".main-footer__icon__image" do
          = icon('fas', 'image', class: 'image-icon')
          = f.file_field :image, class: "hidden"
      = f.submit 'Send', class: 'main-footer__submit-btn'
