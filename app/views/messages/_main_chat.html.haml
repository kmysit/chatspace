.main-chat
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__memberlist
        Member:
        %li.main-header__left-box__memberlist__member
          - @group.users.each do |user|
            =user.name
    = link_to edit_group_path(params[:group_id]), class:"edit-btn" do
      Edit

  .messages
    = render @messages
    -# .message
    -#   .message__info
    -#     %p.message__info__name
    -#       kimi
    -#     %p.message__info__date
    -#       2020/01/17(Fri) 10:17:25
    -#   %p.message__text
    -#     いいい

  .main-footer
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main-footer__text', placeholder: 'type a message'
      .main-footer__form__icon
        = f.label :image, class: "form__icon__image" do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: "hidden"
      = f.submit 'Send', class: 'main-footer__submit-btn'
