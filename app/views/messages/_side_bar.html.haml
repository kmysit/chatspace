.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__edit-user
          = link_to "#", class: "edit-user__btn" do
            = icon('fas', 'edit')
        %li.side-header__box__menu__new-groups
          = link_to edit_user_path(current_user), class: "new-groups__btn" do
            = icon('fas', 'cog', class: 'icon')
  .groups
    = link_to "#", class: "group" do
      %p.group__group-name
        tech
      %p.group__group-message
        メッセージなし
